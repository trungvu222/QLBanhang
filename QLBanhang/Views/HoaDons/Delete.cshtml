@model QLBanhang.Models.HoaDon

@{
    ViewBag.Title = "Delete";
}

<h2>Xóa hóa đơn</h2>

<h3>Bạn có chắc chắn muốn xóa hóa đơn này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày lập hóa đơn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayLapHD)
        </dd>

        <dt>
            Ngày giao hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayGiaoHang)
        </dd>

        <dt>
            Tên khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KhachHang.TenKH)
        </dd>

        <dt>
            Nhân viên bán hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nhanvien.HoNV)
            @Html.DisplayFor(model => model.Nhanvien.Ten)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về trang danh mục hóa đơn", "Index")
        </div>
    }
</div>
